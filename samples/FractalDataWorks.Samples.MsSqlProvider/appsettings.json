{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=SampleDb;Integrated Security=true;Trust Server Certificate=true;Connection Timeout=30;"
  },
  "DataProvider": {
    "Provider": "MsSql",
    "CommandTimeout": 30,
    "BulkCopyTimeout": 300,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000,
    "SchemaValidation": true,
    "Schemas": {
      "Sales": "sales",
      "Inventory": "inventory", 
      "Users": "users"
    }
  },
  "DatabaseInitialization": {
    "CreateDatabaseIfNotExists": true,
    "RunMigrations": true,
    "SeedData": true,
    "ScriptsPath": "Scripts",
    "ExecutionTimeout": 300
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "FractalDataWorks": "Debug",
      "FractalDataWorks.Samples.MsSqlProvider": "Trace",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning",
      "Microsoft": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff ",
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "SampleOperations": {
    "EnableTransactionDemos": true,
    "EnableBulkOperations": true,
    "EnableComplexQueries": true,
    "CustomerTestCount": 100,
    "OrderTestCount": 500,
    "ProductTestCount": 50,
    "CategoryTestCount": 10,
    "UserActivityTestCount": 1000
  }
}